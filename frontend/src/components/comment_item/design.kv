<CommentItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(10)
    message: ''
    username: ''
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: dp(40)
        MDFloatLayout:
            size_hint: None, None
            size: dp(40), dp(40)
            md_bg_color: 1, 1, 1, 1
            radius: self.height / 2
            MDIcon:
                icon: "account"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
        MDBoxLayout:
    
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: root.username
            bold: True
            size_hint_y: None
            height: dp(20)
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        Label:
            id: label
            text: root.message
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            font_size: 16
