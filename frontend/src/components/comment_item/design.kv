<CommentItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(10)
    message: ''
    username: ''
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: dp(40)
        MDIconButton:
            style: "filled"
            icon: "account"
            size_hint: None, None
            size: dp(40), dp(40)
            radius: self.height / 2
        MDBoxLayout:
    
    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        MDLabel:
            text: root.username
            bold: True
            size_hint_y: None
            height: dp(20)
            halign: 'left'
            valign: 'middle'
            text_size: self.size
        MDLabel:
            id: label
            text: root.message
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            font_style: "Body"
            role: "medium"
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)
            MDLabel:
                text: "Edit comment"
                font_style: "Body"
                role: "small"
            MDLabel:
                text: "Delete comment"
                font_style: "Body"
                role: "small"
