<SignupScreen>:
    Header:
                
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint: None, None
            width: dp(400)
            height: dp(700)


            MDLabel:
                text: "[b]Welcome![/b]"
                halign: "center"
                theme_text_color: "Primary"
                markup: True
                font_style: "Display"
                role: "medium"

            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(32)
                size_hint_x: None
                width: dp(400)

                MDLabel:
                    text: "[b]Create an Account[/b]"
                    halign: "left"
                    theme_text_color: "Primary"
                    markup: True
                    font_style: "Headline"
                    role: "medium"

                MDLabel:
                    text: "Enter your username, email & password to sign up"
                    halign: "left"
                    padding: dp(4)
                    markup: True
                    font_style: "Body"
                    role: "medium"

                MDTextField:
                    id: username_input
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Username"
                    MDTextFieldMaxLengthText:
                        max_text_length: 32
                    MDTextFieldLeadingIcon:
                        icon: "account"
                    MDTextFieldHelperText:
                        text: "A cool username"
                        mode: "persistent"

                MDTextField:
                    id: email_input
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Email"
                    MDTextFieldMaxLengthText:
                        max_text_length: 64
                    MDTextFieldLeadingIcon:
                        icon: "email"
                    MDTextFieldHelperText:
                        text: "Your email"
                        mode: "persistent"

                MDTextField:
                    id: password_input
                    mode: "outlined"
                    password: True
                    MDTextFieldHintText:
                        text: "Password"
                    MDTextFieldMaxLengthText:
                        max_text_length: 20
                    MDTextFieldLeadingIcon:
                        icon: "lock"
                    MDTextFieldHelperText:
                        text: "Your password"
                        mode: "persistent"

            MDButton:
                style: "elevated"
                size_hint_x: 0
                width: dp(400)
                radius: 8
                on_press: root.signup_helper()

                MDButtonIcon:
                    icon: "account-plus"
                MDButtonText:
                    id: signup_button
                    text: "Sign Up"

            MDLabel:
                text: "Already have an account? [ref=login][u][b]Log in[/b][/u][/ref]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"
                on_ref_press: 
                    app.root.ids.screen_manager.current = "login"
                    app.root.ids.screen_manager.transition.direction = "left"
