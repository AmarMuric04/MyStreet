
#:import CommentItem components.comment_item.logic.CommentItem

<Comments>:
    AnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: None, None
            padding: ('5dp', '2dp', '5dp', '0dp')
            spacing: dp(32)
            height: dp(700)
            width: dp(400)

            MDIconButton:
                icon: 'chevron-left'
                on_release: app.root.ids.screen_manager.current = "home"

            ConsoleRV:
                id: console_rv

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(64)

                MDTextField:
                    mode: "outlined"
                    size_hint_x: .5
                    id: comment_input

                    MDTextFieldHintText:
                        text: "Helper text"
                        mode: "persistent"

                    MDTextFieldMaxLengthText:
                        max_text_length: 128
                MDButton:
                    on_release: root.submit_comment()
                    size_hint: .2, None
                    height: dp(60)
                    elevation: 0
                    radius: [4, 4, 4, 4]

                    MDButtonIcon:
                        icon: "send"
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}

<ConsoleRV@RecycleView>:
    viewclass: 'CommentItem'
    RecycleBoxLayout:
        id: scroll_box
        orientation: 'vertical'
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(25)