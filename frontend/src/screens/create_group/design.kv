<CreateGroup>:
    Header:

    FloatLayout:
        MDBoxLayout:
            pos_hint: {"top": .93}
            size_hint_y: None
            height: dp(50)
            padding: ('30dp', '0dp', '30dp', '0dp')
            MDIconButton:
                icon: "arrow-left"
                on_release: app.root.ids.screen_manager.current = "home"
                size_hint: None, None
                size: dp(50), dp(50)
            
            MDLabel:
                text: "Back"
                bold: True
                size_hint_y: None
                height: dp(44)

    AnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: None, None
            padding: ('30dp', '50dp', '30dp', '0dp')
            spacing: dp(32)
            height: dp(550)
            width: dp(400)
            MDLabel:
                text: "Create a Group"
                bold: True
                halign: "center"
                font_style: "Display"
                theme_text_color: "Primary"
                role: "medium"

            MDTextField:
                id: name_input
                mode: "outlined"

                MDTextFieldHintText:
                    text: "Group name"

                MDTextFieldHelperText:
                    mode: "persistent"
                    text: "Think of something cool"
                
                MDTextFieldLeadingIcon:
                    icon: "text-box-outline"

                MDTextFieldMaxLengthText:
                    max_text_length: 50

            MDTextField:
                id: description_input
                mode: "outlined"

                MDTextFieldHintText:
                    text: "Description"

                MDTextFieldHelperText:
                    text: "What's your group about?"
                    mode: "persistent"
                
                MDTextFieldLeadingIcon:
                    icon: "text"

                MDTextFieldMaxLengthText:
                    max_text_length: 256

            MDBoxLayout:
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)

                MDCheckbox:
                    id: allow_preview_checkbox
                    size_hint: None, None
                    size: dp(30), dp(30)

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: None
                    width: dp(145)
                    MDLabel:
                        text: "Allow Previews"
                        size_hint_y: None
                        height: dp(18)
                    MDIcon:
                        icon: "information"
            MDButton:
                style: "elevated"
                size_hint_x: None
                width: dp(400)
                radius: 8
                on_press: root.create_group()
                MDButtonIcon:
                    icon: "account-group"
                MDButtonText:
                    id: group_button
                    text: "Create Group"
