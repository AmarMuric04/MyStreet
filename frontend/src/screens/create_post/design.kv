<CreatePost>:
    Header:

    FloatLayout:
        MDBoxLayout:
            pos_hint: {"top": .93}
            size_hint_y: None
            height: dp(50)
            padding: ('30dp', '0dp', '30dp', '0dp')
            MDIconButton:
                icon: "arrow-left"
                on_release: app.root.ids.screen_manager.current = "posts"
                size_hint: None, None
                size: dp(50), dp(50)
            
            MDLabel:
                text: "Back"
                bold: True
                size_hint_y: None
                height: dp(44)


    AnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: None, None
            padding: ('5dp', '50dp', '5dp', '5dp')
            spacing: dp(32)
            height: dp(550)
            width: dp(400)


            
            MDLabel:
                text: "Create a Post"
                bold: True
                font_style: "Display"
                theme_text_color: "Primary"
                role: "medium"
                halign: "center"

            MDTextField:
                id: title_input
                mode: "outlined"

                MDTextFieldHintText:
                    text: "Title"
                
                MDTextFieldLeadingIcon:
                    icon: "text-short"
                
                MDTextFieldHelperText:
                    text: "Title of the post"
                    mode: "persistent"

                MDTextFieldMaxLengthText:
                    max_text_length: 64

            MDTextField:
                id: text_input
                mode: "outlined"

                MDTextFieldHintText:
                    text: "Content"

                MDTextFieldLeadingIcon:
                    icon: "text"
            
                MDTextFieldHelperText:
                    text: "Share your thoughts"
                    mode: "persistent"

                MDTextFieldMaxLengthText:
                    max_text_length: 512
            MDButton:
                style: "filled"
                size_hint_x: None
                width: dp(400)
                radius: 8
                on_release: root.open_file_manager()
                MDButtonIcon:
                    icon: "image"
                MDButtonText:
                    text: "Select Image"
            MDLabel:
                id: selected_image_label
                text: "No file selected"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(30)
            MDBoxLayout:
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)

                MDCheckbox:
                    id: anonymous_checkbox
                    size_hint: None, None
                    size: dp(30), dp(30)

                MDLabel:
                    text: "Post anonymously"
                    size_hint_y: None
                    height: dp(18)

            MDButton:
                style: "elevated"
                size_hint_x: None
                width: dp(400)
                radius: 8
                on_press: root.show_alert_dialog()

                MDButtonIcon:
                    icon: "pencil"

                MDButtonText:
                    id: post_button
                    text: "Create Post"
