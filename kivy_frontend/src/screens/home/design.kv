#:import dp kivy.metrics.dp

<HomeScreen>:
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        FloatLayout:
            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDLabel:
                    text: "Home Page!"
                    bold: True
                    halign: "center"

            MDFloatingActionButton:
                icon: "minus"
                md_bg_color: 1, 0, 0, 1
                elevation_normal: 8
                size_hint: None, None
                size: dp(56), dp(56)
                pos_hint: {"x": 0.05, "y": 0.05} 
                on_release: root.on_logout()
            MDFloatingActionButton:
                icon: "plus"
                md_bg_color: 0, 1, 0, 1
                elevation_normal: 8
                size_hint: None, None
                size: dp(56), dp(56)
                pos_hint: {"right": 0.95, "y": 0.05}
                on_release: 
                    app.switch_screen("posts")
                    root.manager.transition.direction = "left"
