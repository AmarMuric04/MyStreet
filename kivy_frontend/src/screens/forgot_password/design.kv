<ForgotPassword>:
    FloatLayout:
        MDBoxLayout:
            pos_hint: {"top": 1}
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            MDLabel:
                text: "MyStreet"
                bold: True
            
            MDIconButton:
                icon: "hamburger"
                on_release: app.root.ids.nav_drawer.set_state("toggle")
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint: None, None
            width: dp(400)
            height: dp(700)
            MDLabel:
                text: "[i]MyStreet[/i]"
                halign: "left"
                theme_text_color: "Primary"
                markup: True
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(5)
                size_hint_x: None
                width: dp(400)
                MDLabel:
                    text: "[b]Forgot your password?[/b]"
                    halign: "left"
                    theme_text_color: "Primary"
                    markup: True
                MDLabel:
                    text: "Enter your email to change it!"
                    halign: "left"
                    theme_text_color: "Hint"
                    markup: True
            MDTextField:
                id: email_input
                hint_text: "Enter your email"
                size_hint_x: 1
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(20)
                size_hint_x: None
                width: dp(400)
                MDButton:
                    id: proceed_button
                    text: "Proceed"
                    size_hint: (1, None)
                    height: dp(100)
                    halign: "center"
                    md_bg_color: [1, 1, 1, 1]
                    text_color: (0, 0, 0, 1)
                    on_press: root.proceed()
                MDLabel:
                    text: "Remembered your password? [ref=signup][u][b]Log in[/b][/u][/ref]"
                    markup: True
                    halign: "center"
                    theme_text_color: "Primary"
                    on_ref_press: 
                        app.root.ids.screen_manager.current = "login"
                        app.root.ids.screen_manager.transition.direction = "left"