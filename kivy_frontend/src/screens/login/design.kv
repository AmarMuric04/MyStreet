<LoginScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint: None, None
            width: dp(400)
            height: dp(700)
            MDLabel:
                text: "[i]MyStreet[/i]"
                halign: "left"
                theme_text_color: "Custom"
                font_style: "Body1"
                markup: True
                text_color: app.theme_cls.primary_color
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                size_hint_x: None
                width: dp(400)
                MDLabel:
                    text: "[b]Welcome back![/b]"
                    halign: "left"
                    theme_text_color: "Primary"
                    font_style: "H4"
                    markup: True
                MDLabel:
                    text: "Enter your email & password to continue"
                    halign: "left"
                    padding: dp(4)
                    theme_text_color: "Hint"
                    font_style: "Body1"
                    markup: True
                MDTextField:
                    id: email_input
                    hint_text: "Enter your email"
                    size_hint_x: 1
                    mode: "rectangle"
            MDBoxLayout:
                orientation: 'vertical'
                spacing: 0
                MDTextField:
                    id: password_input
                    hint_text: "Enter your password"
                    password: True
                    size_hint_x: 1
                    mode: "rectangle"
                MDLabel:
                    text: "[ref=forgot_password][u][b]Forgot password[/b][/u][/ref]"
                    markup: True
                    halign: "center"
                    theme_text_color: "Primary"
                    halign: "right"
                    on_ref_press: 
                        app.switch_screen("forgot_password")
                        root.manager.transition.direction = "right"
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(20)
                size_hint_x: None
                width: dp(400)
                MDRaisedButton:
                    id: login_button
                    text: "Log In"
                    size_hint: (1, None)
                    height: dp(100)
                    halign: "center"
                    text_color: (0, 0, 0, 1)
                    on_press: root.login_helper()
                MDLabel:
                    text: "Don't have an account? [ref=signup][color=00FF00][u][b]Sign up[/b][/u][/ref]"
                    markup: True
                    halign: "center"
                    theme_text_color: "Primary"
                    on_ref_press: 
                        app.switch_screen("signup")
                        root.manager.transition.direction = "right"
